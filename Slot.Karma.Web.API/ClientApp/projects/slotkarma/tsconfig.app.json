{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "../../out-tsc/app",
    "types": []
  },
  "paths": { 
    "@angular/*": ["../../node_modules/@angular/*"],
    "primeng/*": ["../../node_modules/primeng/*"],
    "common-library": ["../../dist/common-library"]
  },
  "files": [
    "src/main.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "src/test.ts",
    "src/**/*.spec.ts"
  ]
}
